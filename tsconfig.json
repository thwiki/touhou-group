{
	"compilerOptions": {
		"outDir": "dist",
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"declaration": false,
		"lib": ["dom", "es2020", "dom.iterable"],
		"moduleResolution": "node",
		"module": "esnext",
		"target": "es2020",
		"types": ["node"],
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false
	},
	"files": ["scripts/build.ts"]
}
